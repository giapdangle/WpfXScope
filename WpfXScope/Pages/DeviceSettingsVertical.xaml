<UserControl x:Class="WpfXScope.Pages.DeviceSettingsVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="Tab" SelectedSource="/Content/DeviceSettingsVerticalChannel1.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="channel1" Source="/Content/DeviceSettingsVerticalChannel1.xaml" />
                <mui:Link DisplayName="channel2" Source="/Content/DeviceSettingsVerticalChannel2.xaml" />
                <mui:Link DisplayName="Logic" Source="/Content/DeviceSettingsVerticalLogic.xaml" />
                <mui:Link DisplayName="FFT" Source="/Content/DeviceSettingsVerticalFFT.xaml" />
                <mui:Link DisplayName="Ref" Source="/Content/DeviceSettingsVerticalRef.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
